<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="wrap_content"
    android:layout_height="99px"
    >
    <ImageView
        android:id="@+id/iv_title_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/back"
        android:layout_centerVertical="true"
        android:layout_marginLeft="58px"
        />
    <View
        android:id="@+id/title_back_click"
        android:layout_width="40px"
        android:layout_height="40px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="52px"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gasoline_payment"
        android:textColor="@color/ffc8c8c8"
        android:textSize="32px"
        android:layout_toRightOf="@+id/iv_title_back"
        android:layout_centerInParent="true"
        android:layout_marginLeft="37px"
        android:layout_marginRight="37px"
        />
    

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background_color_gradient_left_to_right"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/input_gas_num"
        android:textColor="@color/color_text_white"
        android:textSize="32px"
        />
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="25px"
        >

        <TableRow
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/button01"
                android:layout_width="140px"
                android:layout_height="60px"
                android:textColor="@color/color_text_white"
                android:textSize="32px"
                android:gravity="center"
                android:background="@drawable/selector_keyboard_click"
                android:text="1"
                android:layout_marginRight="20px"
                 />

            <Button
                android:id="@+id/button02"
                android:layout_width="140px"
                android:layout_height="60px"
                android:textColor="@color/color_text_white"
                android:textSize="32px"
                android:gravity="center"
                android:background="@drawable/selector_keyboard_click"
                android:text="2"
                android:layout_marginRight="20px"
                />

            <Button
                android:id="@+id/button03"
                android:layout_width="140px"
                android:layout_height="60px"
                android:textColor="@color/color_text_white"
                android:textSize="32px"
                android:gravity="center"
                android:background="@drawable/selector_keyboard_click"
                android:text="3"
                android:layout_marginRight="20px"
                 />

            <Button
                android:id="@+id/button04"
                android:layout_width="140px"
                android:layout_height="60px"
                android:textColor="@color/color_text_white"
                android:textSize="32px"
                android:gravity="center"
                android:background="@drawable/selector_keyboard_click"
                android:text="4"
                />
        </TableRow>

        <TableRow
            android:orientation="horizontal"
            android:layout_marginTop="20px"
            >
            <Button
                android:id="@+id/button05"
                android:layout_width="140px"
                android:layout_height="60px"
                android:textColor="@color/color_text_white"
                android:textSize="32px"
                android:gravity="center"
                android:background="@drawable/selector_keyboard_click"
                android:text="5"
                android:layout_marginRight="20px"
                />

            <Button
                android:id="@+id/button06"
                android:layout_width="140px"
                android:layout_height="60px"
                android:textColor="@color/color_text_white"
                android:textSize="32px"
                android:gravity="center"
                android:background="@drawable/selector_keyboard_click"
                android:text="6"
                android:layout_marginRight="20px"
                />

            <Button
                android:id="@+id/button07"
                android:layout_width="140px"
                android:layout_height="60px"
                android:textColor="@color/color_text_white"
                android:textSize="32px"
                android:gravity="center"
                android:background="@drawable/selector_keyboard_click"
                android:text="7"
                android:layout_marginRight="20px"
                />

            <Button
                android:id="@+id/button08"
                android:layout_width="140px"
                android:layout_height="60px"
                android:textColor="@color/color_text_white"
                android:textSize="32px"
                android:gravity="center"
                android:background="@drawable/selector_keyboard_click"
                android:text="8"
                />
        </TableRow>

        <TableRow
            android:orientation="horizontal"
            android:layout_marginTop="20px"
            >

            <Button
                android:id="@+id/button09"
                android:layout_width="140px"
                android:layout_height="60px"
                android:textColor="@color/color_text_white"
                android:textSize="32px"
                android:gravity="center"
                android:background="@drawable/selector_keyboard_click"
                android:text="9"
                android:layout_marginRight="20px"
                />

            <Button
                android:id="@+id/button00"
                android:layout_width="140px"
                android:layout_height="60px"
                android:textColor="@color/color_text_white"
                android:textSize="32px"
                android:gravity="center"
                android:background="@drawable/selector_keyboard_click"
                android:text="0"
                android:layout_marginRight="20px"
                />
            <Button
                android:id="@+id/buttonDot"
                android:layout_width="140px"
                android:layout_height="60px"
                android:textColor="@color/color_text_white"
                android:textSize="32px"
                android:gravity="center"
                android:background="@drawable/selector_keyboard_click"
                android:text="."
                android:layout_marginRight="20px"
                />
            <Button
                android:id="@+id/buttonCross"
                android:layout_width="140px"
                android:layout_height="60px"
                android:textColor="@color/color_text_white"
                android:textSize="32px"
                android:gravity="center"
                android:background="@drawable/selector_keyboard_click"
                android:text="Ã—"
                />
        </TableRow>

    </TableLayout>
    <Button
        android:id="@+id/btn_keyboard_sure"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:background="@drawable/selector_keyboard_click"
        android:gravity="center"
        android:text="@string/sure"
        android:textColor="@color/color_text_white"
        android:textSize="32px"
        android:layout_marginTop="14px"
        />

</LinearLayout>